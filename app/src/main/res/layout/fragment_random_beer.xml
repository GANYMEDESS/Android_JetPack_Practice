<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragments.RandomBeerFragment"
    >

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srl_random_beer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:id="@+id/rl_beer_detail_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <FrameLayout
                    android:id="@+id/fl_beer_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    >
                    <ImageView
                        android:id="@+id/iv_beer_image"
                        android:layout_width="@dimen/_300sdp"
                        android:layout_height="@dimen/_300sdp"
                        android:layout_gravity="center"
                        android:background="@color/beer_image_background"
                        android:contentDescription="@string/image_contentDescription"
                        android:scaleType="fitXY"
                        />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fl_beer_image"
                    android:layout_margin="@dimen/_10sdp"
                    android:textColor="@color/blue_grey_900"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"
                    tools:text="Beer Name"
                    />

                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/_16sdp"
                    android:text="@string/beer_tag"
                    />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_tag"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/grey_500"
                    android:textSize="@dimen/_14sdp"
                    tools:text="tagline"
                    />

                <TextView
                    android:id="@+id/tv_abv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_category"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/_16sdp"
                    android:text="@string/beer_alcohol"
                    />

                <TextView
                    android:id="@+id/tv_abv_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_abv"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/grey_500"
                    android:textSize="@dimen/_14sdp"
                    tools:text="0"
                    />
            </RelativeLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>